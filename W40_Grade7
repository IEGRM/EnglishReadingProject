<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>The Arabian Nights</title>
    <style>
      .book-container {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #f5f5f5;
      }
      .page {
        width: 80%;
        height: 80%;
        display: none;
      }
      .page.active {
        display: block;
      }
    </style>
  </head>
  <body>
    <div class="book-container">
      <!-- Page 1 -->
      <div id="page1" class="page active">
        <h1>Page 1: A Brave Explorer</h1>
        <img src="page1.jpg" alt="Explorer" style="width: 100%;">
        <p>The brave explorer begins their journey across the vast desert...</p>
        
      </div>

      <!-- Page 2 -->
      <div id="page2" class="page">
        <h1>Page 2: Entering the Forest</h1>
        <img src="page2.jpg" alt="Forest" style="width: 100%;">
        <p>As the explorer enters the forest, mysterious creatures appear...</p>
        
      </div>

      <!-- Page-flipping buttons -->
      <button onclick="nextPage()">Next</button>
      <button onclick="previousPage()">Previous</button>
      <button onclick="closeBook()">Close</button>
    </div>

    <script>
      let currentPage = 1;

      function nextPage() {
        const totalPages = 2;  // Update if you add more pages
        document.getElementById(`page${currentPage}`).classList.remove('active');
        currentPage = (currentPage % totalPages) + 1;
        document.getElementById(`page${currentPage}`).classList.add('active');
      }

      function previousPage() {
        const totalPages = 2;
        document.getElementById(`page${currentPage}`).classList.remove('active');
        currentPage = (currentPage - 2 + totalPages) % totalPages + 1;
        document.getElementById(`page${currentPage}`).classList.add('active');
      }

      function closeBook() {
        window.history.back();  // Go back to the library
      }
    </script>
  </body>
</html>

